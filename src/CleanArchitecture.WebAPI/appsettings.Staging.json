{
  "ConnectionStrings": {
    "DefaultConnection": "Server=staging-db;Database=CleanArchitectureDB_Staging;Trusted_Connection=false;User Id=staging_user;Password=staging_password;TrustServerCertificate=true;",
    "Redis": "staging-redis:6379"
  },
  "Database": {
    "EnableAutomaticMigrations": false,
    "EnableSensitiveDataLogging": false,
    "EnableDetailedErrors": true,
    "CommandTimeout": 45,
    "MaxRetryCount": 3,
    "MaxRetryDelay": 45
  },
  "Cache": {
    "DefaultExpiration": "00:45:00",
    "EnableDistributedCache": true,
    "EnableStatistics": true,
    "SlidingExpiration": "00:20:00"
  },
  "RabbitMQ": {
    "HostName": "staging-rabbitmq",
    "UserName": "staging_user",
    "Password": "staging_password",
    "MaxRetryAttempts": 3,
    "RetryDelay": "00:00:07",
    "ConnectionTimeoutSeconds": 45,
    "NetworkRecoveryIntervalSeconds": 8,
    "PrefetchCount": 15
  },
  "Application": {
    "EnablePerformanceMonitoring": true,
    "PerformanceThresholdMs": 750,
    "EnableValidationCaching": true,
    "ValidationCacheExpirationMinutes": 45,
    "EnableDetailedValidationErrors": true,
    "MaxFileUploadSizeMB": 8
  },
  "Api": {
    "EnableSwagger": true,
    "EnableCors": true,
    "AllowedOrigins": [ "https://staging.cleanarchitecture.com" ],
    "EnableRateLimiting": true,
    "RateLimitRequestsPerMinute": 80
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore": "Warning",
      "CleanArchitecture": "Information"
    }
  }
}