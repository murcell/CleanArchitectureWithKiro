{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=CleanArchitectureDB_Test;Trusted_Connection=true;TrustServerCertificate=true;",
    "Redis": "localhost:6379"
  },
  "Database": {
    "EnableAutomaticMigrations": true,
    "EnableSensitiveDataLogging": false,
    "EnableDetailedErrors": false,
    "CommandTimeout": 30,
    "MaxRetryCount": 1,
    "MaxRetryDelay": 10
  },
  "Cache": {
    "DefaultExpiration": "00:05:00",
    "EnableDistributedCache": false,
    "EnableStatistics": false,
    "SlidingExpiration": "00:02:00"
  },
  "RabbitMQ": {
    "HostName": "localhost",
    "UserName": "guest",
    "Password": "guest",
    "Port": 5672,
    "VirtualHost": "/",
    "MaxRetryAttempts": 1,
    "RetryDelay": "00:00:01",
    "EnableDeadLetterQueue": false,
    "ConnectionTimeoutSeconds": 10,
    "EnableAutomaticRecovery": false,
    "NetworkRecoveryIntervalSeconds": 5,
    "PrefetchCount": 1,
    "EnablePublisherConfirms": false
  },
  "Application": {
    "EnablePerformanceMonitoring": false,
    "PerformanceThresholdMs": 50,
    "EnableValidationCaching": false,
    "EnableDetailedValidationErrors": true,
    "MaxFileUploadSizeMB": 1,
    "DefaultPageSize": 10,
    "MaxPageSize": 50
  },
  "Api": {
    "EnableSwagger": false,
    "EnableCors": false,
    "EnableRateLimiting": true
  },
  "Logging": {
    "EnableStructuredLogging": true,
    "EnablePerformanceLogging": false,
    "EnableCorrelationId": true,
    "EnableRequestResponseLogging": false,
    "LogLevel": "Warning",
    "PerformanceThresholdMs": 1000,
    "ExcludedPaths": [ "/health", "/metrics", "/swagger" ],
    "File": {
      "Enabled": false,
      "Path": "logs/test-.txt",
      "RollingInterval": "Day",
      "RetainedFileCountLimit": 7,
      "FileSizeLimitBytes": 10485760,
      "RollOnFileSizeLimit": true
    },
    "Console": {
      "Enabled": true,
      "OutputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
    },
    "Seq": {
      "Enabled": false,
      "ServerUrl": "http://localhost:5341",
      "ApiKey": null
    },
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "CleanArchitecture": "Information"
    }
  }
}