{
  "Database": {
    "EnableAutomaticMigrations": false,
    "EnableSensitiveDataLogging": false,
    "EnableDetailedErrors": false,
    "CommandTimeout": 30,
    "MaxRetryCount": 3,
    "MaxRetryDelay": 30
  },
  "Cache": {
    "DefaultExpiration": "01:00:00",
    "EnableDistributedCache": true,
    "EnableStatistics": false,
    "SlidingExpiration": "00:30:00"
  },
  "RabbitMQ": {
    "MaxRetryAttempts": 3,
    "RetryDelay": "00:00:10",
    "ConnectionTimeoutSeconds": 30,
    "NetworkRecoveryIntervalSeconds": 10,
    "PrefetchCount": 20,
    "EnablePublisherConfirms": true
  },
  "Application": {
    "EnablePerformanceMonitoring": true,
    "PerformanceThresholdMs": 1000,
    "EnableValidationCaching": true,
    "ValidationCacheExpirationMinutes": 60,
    "EnableDetailedValidationErrors": false,
    "MaxFileUploadSizeMB": 5
  },
  "Api": {
    "EnableSwagger": false,
    "EnableCors": true,
    "EnableRateLimiting": true,
    "RateLimitRequestsPerMinute": 60
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Error",
      "CleanArchitecture": "Information"
    }
  }
}