# Production Environment Configuration
# Clean Architecture .NET Project

# Application Settings
ASPNETCORE_ENVIRONMENT=Production
TAG=latest

# Database Configuration
SQL_PASSWORD=YourProductionSqlPassword!ChangeThis
MSSQL_PID=Standard

# Redis Configuration
REDIS_PASSWORD=YourProductionRedisPassword!ChangeThis

# RabbitMQ Configuration
RABBITMQ_USER=produser
RABBITMQ_PASSWORD=YourProductionRabbitPassword!ChangeThis

# Logging Configuration
LOG_LEVEL=Warning

# Security Settings
JWT_SECRET=YourProductionJwtSecretKeyThatShouldBeAtLeast32CharactersLong!ChangeThis
JWT_ISSUER=CleanArchitecture.Production
JWT_AUDIENCE=CleanArchitecture.API.Production
JWT_EXPIRY_MINUTES=30

# API Configuration
API_VERSION=v1
API_TITLE=Clean Architecture API
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=10

# Performance Settings
CONNECTION_POOL_SIZE=200
REDIS_CONNECTION_POOL_SIZE=100
RABBITMQ_CONNECTION_POOL_SIZE=50

# Monitoring
ENABLE_METRICS=true
ENABLE_TRACING=true

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem